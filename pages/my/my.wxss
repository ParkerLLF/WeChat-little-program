.container{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}
.titleView{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}

.logo{
  margin-left: 0rpx;
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
}

.text{
  margin-left: 30rpx;
  font-size: 40rpx;
  color: red;
}
.buttonView{
  width: 700rpx;
  height: 120rpx;
  border-radius: 15rpx;
  border: 1rpx black solid;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.buttonView .icon{
  width: 50rpx;
  height: 50rpx;
  margin-left: 40rpx;
}

.text{
  font-size: 30rpx;
  color: black;
}
