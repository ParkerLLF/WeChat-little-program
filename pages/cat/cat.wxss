/* pages/cat/cat.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: rgba(65, 58, 58, 0.3);
  position: relative;
}

.text {
  font-family: 'icomoon';
  font-weight: normal;
  font-style: normal;
}

.header {
  width: 750rpcx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background-color: red;
  margin-bottom: 30rpx;
  position: absolute;
  left: 20rpx;
  top: 0rpx;
}

.logo {
  margin-left: 0rpx;
  width: 145rpx;
  height: 145rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
}

.header .text {
  margin-left: 50rpx;
}

.btnv {
  width: 700rpx;
  height: 120rpx;
  border-radius: 15rpx;
  border: 1rpx #ccc solid;
  background: white;
  /* display: flex;
  flex-direction: row;
  align-items: center; */
}

.btn {
  width: 700rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.local {
  margin-left: 350rpx;
  color: rgba(0, 0, 0, 0.35);
}

.nick {
  width: 750rpx;
  height: 330rpx;
  background-color: aqua;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.info {
  font-family: 'icomoon';
  font-weight: normal;
  font-style: normal;
  display: flex;
  flex-direction: row;
  line-height: 35px;
  margin-left: 15px;
  color: #fff;
}

.imgbox {
  width: 700rpx;
  margin-top: 15rpx;
  margin-bottom: -150rpx;
  font-size: 28rpx;
  color: #fff;
  /* background-color: purple; */
}

.imgbox text {
  margin-left: 35rpx;
}

.img image {
  border-radius: 25rpx;
  width: 210rpx;
  height: 210rpx;
  margin-right: 35rpx;
  margin-top: 35rpx;
  overflow: hidden;
}

.img image:nth-child(3) {
  margin-right: 0rpx;
}

.img image:nth-child(6) {
  margin-right: 0rpx;
}
